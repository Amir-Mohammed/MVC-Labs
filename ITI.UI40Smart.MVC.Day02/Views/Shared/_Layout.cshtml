<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MVC Smart | @ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>

<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    
    <div class="collapse container navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
            <li class="nav-item active">
                @Html.ActionLink("MVC Smart", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Employees", "Index", "Employees", null, new { @class = "nav-link" })
            </li>
        </ul>
    </div>
</nav>
<div class="container body-content mt-3 mb-5">
    @RenderBody()
</div>
<footer class="fixed-bottom bg-dark text-center text-white p-2">
    <p class="m-0">&copy; @DateTime.Now.Year - ITI Smart</p>
</footer>

<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
@RenderSection("Scripts", false);
</body>
</html>